{
  /* editor */
  "editor.autoClosingBrackets": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  /* worckbench */
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Sapphire",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  /* terminal */
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "GitBash",
  "terminal.integrated.fontFamily": "mononoki Nerd Font Mono",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": ["${env:windir}\\Sysnative\\cmd.exe", "${env:windir}\\System32\\cmd.exe"],
      "args": [],
      "icon": "terminal-cmd"
    },
    "GitBash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.tabs.enabled": true,
  /* emmet */
  "emmet.includeLanguages": {
    "[javascript]": "javascriptreact",
    "[typescript]": "typescriptreact",
    "django-html": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  /* formatting */
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[html][css][javascript][json][jsonc][javascriptreact][typescript][typescriptreact][markdown][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": { "editor.defaultFormatter": "jock.svg" },
  "[xml]": { "editor.defaultFormatter": "redhat.vscode-xml" },
  "[dockercompose]": { "editor.defaultFormatter": "ms-azuretools.vscode-docker" },
  "[vue]": { "editor.defaultFormatter": "octref.vetur" },
  "[java]": { "editor.defaultFormatter": "redhat.java" },
  "[django-html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[graphql]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  /* python */
  "python.languageServer": "Pylance",
  "python.formatting.autopep8Args": ["--max-line-length", "100", "--experimental"],
  "[python]": {
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "ms-python.python"
  },
  /* prettier */
  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.insertPragma": false,
  "prettier.bracketSameLine": false,
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 100,
  "prettier.proseWrap": "preserve",
  "prettier.quoteProps": "as-needed",
  "prettier.requirePragma": false,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.vueIndentScriptAndStyle": false,
  /* code runner */
  "code-runner.executorMap": {
    "javascript": "node",
    "python": "python3",
    "c": "gcc $fullFileName -o $workspaceRoot/bin/$fileNameWithoutExt.exe && $workspaceRoot/bin/$fileNameWithoutExt.exe",
    "cpp": "g++ $fullFileName -o $workspaceRoot/bin/$fileNameWithoutExt.exe && $workspaceRoot/bin/$fileNameWithoutExt.exe",
    "java": "javac $fullFileName && echo \"[javac] compilation succesfull - .class file created\""
  },
  /* others */
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.associations": {
    "*.html": "html"
  },
  "svg.preview.mode": "svg",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "css.lint.unknownAtRules": "ignore",
  "redhat.telemetry.enabled": true,
  "editor.accessibilitySupport": "off",
  "liveServer.settings.NoBrowser": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "thunder-client.codeSnippetLanguage": "curl",
  "rapidapi.terminalLink.enabled": false,
  "githubPullRequests.terminalLinksHandler": "github",
  "diffEditor.ignoreTrimWhitespace": false
}
